<% provide(:title, "Reset password") %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: password_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'  %>

      <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
