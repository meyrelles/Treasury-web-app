<% provide(:title, "Reset password") %>
<h1>New password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: password_reset_path) do |f| %>

      <%= f.label 'Code sent by email' %>
      <%= f.text_field :code, class: 'form-control'  %>

      <%= f.label "New password"  %>
      <%= f.password_field :new_password, class: 'form-control'  %>

      <%= f.label 'Repeat password' %>
      <%= f.password_field :repeat_password, class: 'form-control'  %>

      <%= f.submit "Reset", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
